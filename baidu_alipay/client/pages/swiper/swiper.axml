<onekit-view  onekitClass="wrap">
    <onekit-view  onekitClass="title">示例</onekit-view>
    <onekit-view  onekitClass="swiper-wrap">
        <onekit-swiper  indicator-color="rgba(0,0,0,0.30)" indicator-active-color="#fff" duration="{{switchDuration}}" interval="{{autoPlayInterval}}" autoplay="{{switchAutoPlayStatus}}" indicator-dots="{{switchIndicateStatus}}" vertical="false" circular="true" current="0" onChange="swiperChange">
            <block  a:for-item="item" a:key="item" a:for="{{items}}">
                <onekit-swiper-item  onekitClass="{{item.className}}">
                    <onekit-view  onekitClass="item">{{item.value}}</onekit-view>
                </onekit-swiper-item>
            </block>
        </onekit-swiper>
    </onekit-view>

    <onekit-view  onekitClass="switch-wrap">
        <onekit-view >
            <text >指示器</text>
            <switch  checked="{{switchIndicateStatus}}" onChange="switchIndicate" onekitClass="switch"></switch>
        </onekit-view>
        <onekit-view >
            <text >自动播放</text>
            <switch  checked="{{switchAutoPlayStatus}}" onChange="switchAutoPlay" onekitClass="switch"></switch>
        </onekit-view>
    </onekit-view>

    <onekit-view  onekitClass="slider-wrap">
        <onekit-view >
            <onekit-view  onekitClass="slider-title-time">
                <text  onekitClass="slider-title">幻灯片切换时长</text>
                <text  onekitClass="slider-time">{{switchDuration}}ms</text>
            </onekit-view>
            <slider  min="300" max="1500" value="{{switchDuration}}" onChange="changeSwitchDuration"></slider>
        </onekit-view>

        <onekit-view >
            <onekit-view  onekitClass="slider-title-time">
                <text  onekitClass="slider-title">自动播放间隔时长</text>
                <text  onekitClass="slider-time">{{autoPlayInterval}}ms</text>
            </onekit-view>
            <slider  min="1000" max="5000" value="{{autoPlayInterval}}" onChange="changeAutoPlayInterval"></slider>
        </onekit-view>
    </onekit-view>
</onekit-view>